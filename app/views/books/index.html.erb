<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <p id ="notice"></p>
  <h1>Books</h1>
  <table>
  	<thead>
  	  <tr>
  	  	<th>Title</th>
  	  	<th>Body</th>
  	  	<th colspan="3"></th>
  	  </tr>
  	</thead>
  	<% @books.each do |book| %>
  	<tbody>
  	  <tr>
  		<td><%= book.title %></td>
  		<td><%= book.body %></td>
  		<td><%= link_to "Show", book_path(book) %></td>
  		<td><%= link_to "Edit", edit_book_path(book) %></td>
  		<td><%= link_to "Destroy", book_path(book), method: :delete, data:{confirm: "Are you sure?"} %></td>
  	  </tr>
  	</tbody>
  	<% end %>
  </table>

  <h2>New book</h2>
  <%= form_for(@book) do |f| %>
  <div class="field">
  		<label for="book_title">Title</label>
  		<%= f.text_field :title %>
  		<label for="book_body">Body</label>
  		<%= f.text_field :body %>
  		<%= f.submit 'Create Book' %>
  </div>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <% end %>

 </body>

</html>
